{
  "run": [
    {
      "method": "input",
      "params": {
        "title": "Starting...",
        "description": "The installation of the dependencies will start now..."
      }
    },
    {
      "method": "shell.start",
      "params": {
        "path": "",
        "env": {
          "HF_HOME": "../"
        }
      }
    },
    {
      "method": "shell.enter",
      "params": {
      "message": "conda create -n tokenflow python=3.9",
      "on": [{ "event": null, "return": true }]
      }
      
    },
        {
      "method": "shell.enter",
      "params": {
      "message": "y",
      "on": [{ "event": "/.+/", "return": true }]
      }
    },
      {
      "method": "shell.enter",
      "params": {
      "message": "\n",
      "on": [{ "event": null, "return": true }]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "call activate tokenflow",
        "on": [{ "event": null, "return": true }]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "conda install pytorch torchvision torchaudio pytorch-cuda=11.8 -c pytorch -c nvidia",
      
      "on": [{ "event": "/Proceed ([y]/n)?/", "return": true }]
    }
    },
    {
      "method": "shell.enter",
      "params": {
      "message": "\n",
      "on": [{ "event": null, "return": true }]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "conda install av -c conda-forge",
      
      "on": [{ "event": "/Proceed ([y]/n)?/", "return": true }]
    }
    },
    {
      "method": "shell.enter",
      "params": {
      "message": "\n",
      "on": [{ "event": null, "return": true }]
      }
    },
    
    {
      "method": "shell.enter",
      "params": {
        "message": "pip install -r requirements.txt",
        "on": [{ "event": null, "return": true }]
      }
    }
      ,
      {
      "method": "input",
      "params": {
        "title": "Install Success",
        "description": "Go back to the dashboard and launch the app!"
      }
    }

  ]
}