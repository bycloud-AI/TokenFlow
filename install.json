{
  "run": [
    {
      "method": "input",
      "params": {
        "title": "Starting...",
        "description": "The installation of the dependencies will start now..."
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/omerbt/TokenFlow.git"
      }
    },
    {
      "method": "shell.start",
      "params": {
        "path": "tokenflow",
        "env": {
          "HF_HOME": "../tokenflow"
        }
      }
    },
    {
      "method": "shell.enter",
      "params": {
      "message": "conda create -n tokenflow python=3.9",
      "on" : [
        {
          "event": "/Proceed ([y]/n)?/",
          "return": true 
        }
      ]
      }
      
    },
        {
      "method": "shell.enter",
      "params": {
      "message": "y",
      "on": [{ "event": "/.+/", "return": true }]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "conda activate tokenflow"
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "conda install pytorch torchvision torchaudio pytorch-cuda=11.8 -c pytorch -c nvidia",
      
      "on" : [
        {
          "event": "/Proceed ([y]/n)?/",
          "return": true 
        }
      ]
    }
    },
    {
      "method": "shell.enter",
      "params": {
      "message": "y"
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "pip install -r requirements.txt"
      }
    }

  ]
}