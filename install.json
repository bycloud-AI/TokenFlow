{
  "run": [
    {
      "method": "input",
      "params": {
        "title": "Starting...",
        "description": "The installation of the dependencies will start now..."
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/omerbt/TokenFlow.git"
      }
    },
    {
      "method": "shell.start",
      "params": {
        "path": "tokenflow",
        "env": {
          "HF_HOME": "../tokenflow"
        }
      }
    },
    {
      "method": "shell.enter",
      "params": {
      "message": "conda create -n tokenflow python=3.9",
      "on": [{ "event": "/.+/", "return": true }]
      }
      
    },
        {
      "method": "shell.enter",
      "params": {
      "message": "y",
      "on": [{ "event": "Proceed", "return": true }]
      }
    },
      {
      "method": "shell.enter",
      "params": {
      "message": "y",
      "on": [{ "event": "/.+/", "return": true }]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "call activate tokenflow",
        "on": [{ "event": "/conda activate tokenflow/", "return": true }]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "conda install pytorch torchvision torchaudio pytorch-cuda=11.8 -c pytorch -c nvidia",
      
      "on": [{ "event": "/.+/", "return": true }]
    }
    },
    {
      "method": "shell.enter",
      "params": {
      "message": "y",
      "on": [{ "event": "/.+/", "return": true }]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "pip install -r requirements.txt",
        "on": [{ "event": "/.+/", "return": true }]
      }
    }

  ]
}